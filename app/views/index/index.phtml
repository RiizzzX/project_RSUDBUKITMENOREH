<script>
    // Auto-scroll dengan langsung balik ke atas
    document.addEventListener('DOMContentLoaded', function() {
        const antrianList = document.querySelector('.antrian-list');
        
        if (!antrianList) return;
        
        let scrollPos = 0;
        const scrollSpeed = 1.5;
        
        setInterval(() => {
            scrollPos += scrollSpeed;
            const maxScroll = antrianList.scrollHeight - antrianList.clientHeight;
            
            // Jika sudah mentok, langsung balik ke atas (instant)
            if (scrollPos >= maxScroll) {
                scrollPos = 0;
            }
            
            antrianList.scrollTop = scrollPos;
        }, 50);
    });
</script>
